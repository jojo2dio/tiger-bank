<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zoo.sysuser.dal.SysUserMapper">

    <sql id="Base_Column_List">
        id, username, password, real_name, phone, email, status, role, create_time, update_time
    </sql>

    <insert id="add" parameterType="org.zoo.sysuser.dal.SysUser">
        INSERT INTO sys_user (
            username, password, real_name, phone, email, status, role, create_time, update_time
        ) VALUES (
            #{username}, #{password}, #{realName}, #{phone}, #{email}, #{status}, #{role}, 
            NOW(), NOW()
        )
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM sys_user WHERE id = #{id}
    </delete>

    <update id="update" parameterType="org.zoo.sysuser.dal.SysUser">
        UPDATE sys_user
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="realName != null">real_name = #{realName},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="status != null">status = #{status},</if>
            <if test="role != null">role = #{role},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <select id="getById" parameterType="java.lang.Long" resultType="org.zoo.sysuser.dal.SysUser">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM sys_user
        WHERE id = #{id}
    </select>

    <select id="getByUsername" parameterType="java.lang.String" resultType="org.zoo.sysuser.dal.SysUser">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM sys_user
        WHERE username = #{username}
    </select>

    <select id="list" resultType="org.zoo.sysuser.dal.SysUser">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM sys_user
        ORDER BY create_time DESC
    </select>

    <select id="page" resultType="org.zoo.sysuser.dal.SysUser">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM sys_user
        ORDER BY create_time DESC
        LIMIT #{start}, #{limit}
    </select>

    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM sys_user
    </select>
</mapper>
